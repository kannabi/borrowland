<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/det_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Сумма займа:"
            android:textSize="18sp"
            android:textColor="@color/fabBody" />
        <EditText
            android:id="@+id/enter_sum_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/det_description"
            android:textSize="24sp" />
        <Button
            android:id="@+id/add_loan_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить"
            android:layout_below="@+id/enter_sum_area"/>
        <Button
            android:id="@+id/cancel_adding_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:layout_below="@+id/add_loan_button"/>
    </RelativeLayout>

</RelativeLayout>